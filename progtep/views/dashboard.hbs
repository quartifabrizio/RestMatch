    <script>
        // DOM Elements
        const app = document.getElementById('app');
        const themeToggle = document.getElementById('themeToggle');
        const preferencesForm = document.getElementById('preferencesForm');
        const alertEl = document.getElementById('alert');
        const toast = document.getElementById('toast');
        const toastMessage = document.getElementById('toast-message');
        const jobsList = document.getElementById('jobsList');
        const toggleOfferBtn = document.getElementById('toggleOfferForm');
        const createOfferForm = document.getElementById('createOfferForm');
        const currentDateElement = document.getElementById('current-date');
        const modal = document.getElementById('jobDetailModal');
        const modalCloseBtn = document.querySelector('.modal-close-btn');
        const standardImageUrl = 'https://via.placeholder.com/400x200?text=Offerta+Lavoro';
        const standardModalImageUrl = 'https://via.placeholder.com/800x400?text=Offerta+Lavoro';

        // Set current date
        const setCurrentDate = () => {
            const now = new Date();
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            currentDateElement.textContent = now.toLocaleDateString('it-IT', options);
        };
        setCurrentDate();
        
        // Check for saved theme
        const savedTheme = localStorage.getItem('theme') || 'light';
        if (savedTheme === 'dark') {
            app.setAttribute('data-theme', 'dark');
        }
        
        if (themeToggle) {
            themeToggle.addEventListener('click', () => {
                const currentTheme = app.getAttribute('data-theme') || 'light';
                const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                app.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                document.body.style.transition = 'background-color 0.5s ease, color 0.5s ease';
            });
        }
        
        function showToast(message, type = 'success') {
            toastMessage.textContent = message;
            toast.className = `toast ${type} show`; // Ensure show is added correctly
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3500);
        }
        
        function showAlert(message, type) {
            alertEl.textContent = message;
            alertEl.className = `alert alert-${type}`;
            alertEl.style.display = 'block';
            alertEl.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            setTimeout(() => {
                alertEl.style.opacity = '0';
                setTimeout(() => {
                    alertEl.style.display = 'none';
                    alertEl.style.opacity = '1';
                }, 300);
            }, 5000);
        }
        
        if (preferencesForm) {
            preferencesForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const startDateInput = document.getElementById('startDate');
                const endDateInput = document.getElementById('endDate');
                if (startDateInput && endDateInput && startDateInput.value && endDateInput.value) {
                    if (new Date(endDateInput.value) < new Date(startDateInput.value)) {
                        showAlert('La data di fine deve essere successiva alla data di inizio', 'error');
                        return;
                    }
                }
                
                const formData = new FormData(this);
                const data = {};
                for (let key of formData.keys()) {
                    // Per input multi-select, getAll restituirà un array dei valori selezionati
                    if (key === 'jobType') {
                        data[key] = formData.getAll(key);
                    } else {
                        data[key] = formData.get(key);
                    }
                }
                
                const submitBtn = this.querySelector('button[type="submit"]');
                const originalBtnText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<div class="spinner"></div> Salvataggio...';
                submitBtn.disabled = true;
                
                fetch('/save-preferences', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(responseData => {
                    submitBtn.innerHTML = originalBtnText;
                    submitBtn.disabled = false;
                    if(responseData.success) {
                        showToast('Preferenze salvate con successo!', 'success');
                        if(responseData.offers) {
                            updateJobListings(responseData.offers);
                        }
                        // Update preference display in title
                        const jobTypePrefDisplay = document.querySelector('.card-header .card-title i.fa-briefcase').parentElement;
                        if (jobTypePrefDisplay && data.jobType && data.jobType.length > 0) {
                            jobTypePrefDisplay.innerHTML = `<i class="fas fa-briefcase"></i> Offerte di Lavoro per ${data.jobType.join(', ')}`;
                        } else if (jobTypePrefDisplay) {
                            jobTypePrefDisplay.innerHTML = `<i class="fas fa-briefcase"></i> Offerte di Lavoro`;
                        }
                    } else {
                        showToast(responseData.message || 'Si è verificato un errore', 'error');
                    }
                })
                .catch(error => {
                    submitBtn.innerHTML = originalBtnText;
                    submitBtn.disabled = false;
                    showToast('Errore di connessione: ' + error.message, 'error');
                });
            });
        }
        
        function updateJobListings(offers) {
            jobsList.style.opacity = '0';
            setTimeout(() => {
                if(offers.length === 0) {
                    jobsList.innerHTML = `
                        <div class="empty-state animate-in">
                            <i class="fas fa-search"></i>
                            <p class="empty-state-text">Nessuna offerta di lavoro disponibile al momento.</p>
                            <button class="btn btn-secondary" onclick="document.getElementById('preferencesForm').dispatchEvent(new Event('submit'));">
                                <i class="fas fa-sync"></i> Aggiorna ricerca
                            </button>
                        </div>
                    `;
                } else {
                    jobsList.innerHTML = ''; // Clear existing
                    offers.forEach((job, index) => {
                        const jobCard = document.createElement('div');
                        jobCard.className = 'job-card animate-in';
                        jobCard.classList.add(`animate-job-${index % 10}`); // Keep animation class
                        
                        let rolesHtml = '';
                        if (Array.isArray(job.role)) {
                            job.role.forEach(r => {
                                rolesHtml += `<span class="badge badge-primary">${r}</span> `;
                            });
                        } else if (job.role) { // Fallback for single role string
                            rolesHtml = `<span class="badge badge-primary">${job.role}</span> `;
                        }

                        let restaurantTypeHtml = '';
                        if (job.restaurant_type) {
                            restaurantTypeHtml = `<span class="badge badge-secondary">${job.restaurant_type}</span>`;
                        }

                        jobCard.innerHTML = `
                            <div class="job-image">
                                <img src="${standardImageUrl}" alt="${job.title}">
                            </div>
                            <div class="job-content">
                                <h3 class="job-title">${job.title}</h3>
                                <div class="job-badges">
                                    ${rolesHtml}
                                    ${restaurantTypeHtml}
                                </div>
                                <div class="job-details">
                                    <div class="job-detail">
                                        <i class="fas fa-calendar-alt"></i>
                                        <span>${job.start_date} - ${job.end_date}</span>
                                    </div>
                                    <div class="job-detail">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>${job.city}, ${job.region}</span>
                                    </div>
                                    ${job.salary ? `
                                    <div class="job-detail">
                                        <i class="fas fa-euro-sign"></i>
                                        <span>${job.salary}</span>
                                    </div>
                                    ` : ''}
                                </div>
                                <p class="job-description">${job.description}</p>
                                <div class="job-actions">
                                    <button class="btn btn-primary btn-hover-effect contact-restaurateur" data-offer-id="${job.id}">
                                        <i class="fas fa-paper-plane"></i> Contatta Ristoratore
                                    </button>
                                    <button class="btn btn-secondary job-details-btn" data-offer-id="${job.id}" data-job='${JSON.stringify(job).replace(/'/g, "&apos;")}'>
                                        <i class="fas fa-info-circle"></i> Dettagli
                                    </button>
                                </div>
                            </div>
                        `;
                        jobsList.appendChild(jobCard);
                    });
                }
                jobsList.style.opacity = '1';
                attachJobCardEvents();
            }, 300);
        }
        
        function attachJobCardEvents() {
            document.querySelectorAll('.contact-restaurateur').forEach(button => {
                button.addEventListener('click', function() {
                    const offerId = this.getAttribute('data-offer-id');
                    contactRestaurateur(offerId, this);
                });
            });
            document.querySelectorAll('.job-details-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const offerId = this.getAttribute('data-offer-id');
                    let jobData;
                    try {
                        jobData = this.hasAttribute('data-job') ? 
                            JSON.parse(this.getAttribute('data-job').replace(/&apos;/g, "'")) : 
                            { id: offerId };
                    } catch (e) {
                        console.error("Error parsing job data for modal:", e);
                        jobData = { id: offerId }; // Fallback
                    }
                    showJobDetails(jobData);
                });
            });
        }
        
        function showJobDetails(job) {
            if (!job.title && job.id) { // Fallback if full data not passed
                // Attempt to find data from a global store or re-fetch, simplified here
                const offerFromList = {{{json jobs}}}.find(j => j.id == job.id);
                if (offerFromList) job = offerFromList;
                else {
                     showToast('Dettagli offerta non trovati.', 'error'); return;
                }
            }

            document.getElementById('modal-job-img').src = standardModalImageUrl;
            document.getElementById('modal-job-title').textContent = job.title || 'Dettaglio Offerta';
            
            const badgesContainer = document.getElementById('modal-job-badges');
            badgesContainer.innerHTML = '';
            if (Array.isArray(job.role)) {
                job.role.forEach(r => {
                    badgesContainer.innerHTML += `<span class="job-detail-badge">${r}</span> `;
                });
            } else if (job.role) {
                 badgesContainer.innerHTML += `<span class="job-detail-badge">${job.role}</span> `;
            }
            if (job.restaurant_type) {
                badgesContainer.innerHTML += `<span class="job-detail-badge secondary">${job.restaurant_type}</span>`;
            }
            
            const infoGrid = document.getElementById('modal-job-info');
            infoGrid.innerHTML = `
                <div class="job-detail-info-item">
                    <div class="job-detail-info-label">Periodo</div>
                    <div class="job-detail-info-value"><i class="fas fa-calendar-alt"></i> <span>${job.start_date} - ${job.end_date}</span></div>
                </div>
                <div class="job-detail-info-item">
                    <div class="job-detail-info-label">Località</div>
                    <div class="job-detail-info-value"><i class="fas fa-map-marker-alt"></i> <span>${job.city}, ${job.region}</span></div>
                </div>
                ${job.restaurant_type ? `
                <div class="job-detail-info-item">
                    <div class="job-detail-info-label">Tipo ristorante</div>
                    <div class="job-detail-info-value"><i class="fas fa-store"></i> <span>${job.restaurant_type}</span></div>
                </div>` : ''}
                ${job.salary ? `
                <div class="job-detail-info-item">
                    <div class="job-detail-info-label">Stipendio</div>
                    <div class="job-detail-info-value"><i class="fas fa-euro-sign"></i> <span>${job.salary}</span></div>
                </div>` : ''}
            `;
            
            document.getElementById('modal-job-description').textContent = job.description || 'Nessuna descrizione fornita.';
            
            const contactBtn = document.querySelector('.modal-contact-btn');
            const newContactBtn = contactBtn.cloneNode(true); // To remove old listeners
            newContactBtn.setAttribute('data-offer-id', job.id);
            newContactBtn.addEventListener('click', function() {
                contactRestaurateur(this.getAttribute('data-offer-id'), this);
                closeModal();
            });
            contactBtn.parentNode.replaceChild(newContactBtn, contactBtn);
            
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }
        
        function closeModal() {
            modal.classList.remove('active');
            document.body.style.overflow = '';
        }
        if (modalCloseBtn) modalCloseBtn.addEventListener('click', closeModal);
        modal.addEventListener('click', function(e) { if (e.target === modal) closeModal(); });
        
        attachJobCardEvents(); // Initial attachment for pre-rendered jobs
        
        if (toggleOfferBtn && createOfferForm) {
            toggleOfferBtn.addEventListener('click', function(e) {
                e.preventDefault();
                const isHidden = createOfferForm.style.display === 'none' || createOfferForm.style.display === '';
                if (isHidden) {
                    createOfferForm.style.display = 'block';
                    createOfferForm.style.animation = 'slideDown 0.3s ease-out forwards';
                    this.innerHTML = '<i class="fas fa-minus"></i> Nascondi form';
                } else {
                    createOfferForm.style.animation = 'slideUp 0.3s ease-in forwards';
                    setTimeout(() => { createOfferForm.style.display = 'none'; }, 300);
                    this.innerHTML = '<i class="fas fa-plus"></i> Crea offerta';
                }
            });
        }
        
        if (createOfferForm) {
            createOfferForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const startDateInput = document.getElementById('start_date_offer');
                const endDateInput = document.getElementById('end_date_offer');
                if (startDateInput && endDateInput && startDateInput.value && endDateInput.value) {
                    if (new Date(endDateInput.value) < new Date(startDateInput.value)) {
                        showAlert('La data di fine deve essere successiva alla data di inizio', 'error');
                        return;
                    }
                }

                const formData = new FormData(this);
                const data = {};
                for (let key of formData.keys()) {
                     // For multi-select, getAll will return an array
                    if (key === 'role') { // 'role' is the name in createOfferForm for job types
                        data[key] = formData.getAll(key);
                    } else {
                        data[key] = formData.get(key);
                    }
                }
                
                const submitBtn = this.querySelector('button[type="submit"]');
                const originalBtnText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<div class="spinner"></div> Creazione...';
                submitBtn.disabled = true;
                
                fetch('/create-offer', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(responseData => {
                    submitBtn.innerHTML = originalBtnText;
                    submitBtn.disabled = false;
                    if(responseData.success) {
                        showToast('Offerta creata con successo!', 'success');
                        createOfferForm.reset();
                        createOfferForm.style.animation = 'slideUp 0.3s ease-in forwards';
                        setTimeout(() => {
                            createOfferForm.style.display = 'none';
                            if(toggleOfferBtn) toggleOfferBtn.innerHTML = '<i class="fas fa-plus"></i> Crea offerta';
                        }, 300);
                        setTimeout(() => { window.location.reload(); }, 1500);
                    } else {
                        showToast(responseData.message || 'Si è verificato un errore', 'error');
                    }
                })
                .catch(error => {
                    submitBtn.innerHTML = originalBtnText;
                    submitBtn.disabled = false;
                    showToast('Errore di connessione: ' + error.message, 'error');
                });
            });
        }
        
        function contactRestaurateur(offerId, buttonEl) {
            const originalBtnText = buttonEl ? buttonEl.innerHTML : '';
            if (buttonEl) {
                buttonEl.innerHTML = '<div class="spinner"></div> Contattando...';
                buttonEl.disabled = true;
            }
            fetch('/api/contact-restaurateur', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ offerId: offerId })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('Chat aperta, verrai reindirizzato...', 'success');
                    document.body.style.opacity = '0';
                    document.body.style.transition = 'opacity 0.5s ease';
                    setTimeout(() => { window.location.href = `/chat/${data.roomId}`; }, 600);
                } else {
                    if (buttonEl) { buttonEl.innerHTML = originalBtnText; buttonEl.disabled = false; }
                    showToast('Errore: ' + (data.error || 'sconosciuto'), 'error');
                }
            })
            .catch(error => {
                if (buttonEl) { buttonEl.innerHTML = originalBtnText; buttonEl.disabled = false; }
                showToast('Si è verificato un errore durante il contatto', 'error');
            });
        }
        
        document.querySelectorAll('input[type="date"]').forEach(input => {
            const today = new Date().toISOString().split('T')[0];
            input.min = today;
            if (!input.value && !input.id.includes('startDate') && !input.id.includes('endDate') && !input.id.includes('start_date') && !input.id.includes('end_date')) { 
                 // Do not set default for preference dates, only for offer creation if needed
            }
        });
        
        const welcomeMessageStrong = document.querySelector('.welcome-message strong');
        if (welcomeMessageStrong) {
            const text = welcomeMessageStrong.textContent;
            welcomeMessageStrong.textContent = '';
            let i = 0;
            const typeWriter = () => {
                if (i < text.length) {
                    welcomeMessageStrong.textContent += text.charAt(i);
                    i++;
                    setTimeout(typeWriter, 80);
                }
            };
            setTimeout(typeWriter, 500);
        }
        
        const onlineCounter = document.getElementById('online-counter');
        if (onlineCounter) {
            setInterval(() => {
                let count = parseInt(onlineCounter.textContent);
                let change = Math.floor(Math.random() * 3) - 1;
                count = Math.max(1, count + change);
                if (change !== 0) {
                    onlineCounter.style.transform = 'scale(1.2)';
                    onlineCounter.style.color = change > 0 ? 'var(--app-success)' : 'var(--app-warning)';
                    setTimeout(() => {
                        onlineCounter.textContent = count;
                        onlineCounter.style.transform = 'scale(1)';
                        onlineCounter.style.color = '';
                    }, 200);
                }
            }, 8000);
        }
        
        document.querySelectorAll('input, select').forEach(input => {
            input.addEventListener('invalid', function(e) {
                e.preventDefault();
                this.classList.add('invalid');
                this.animate([ { transform: 'translateX(-5px)' }, { transform: 'translateX(5px)' }, { transform: 'translateX(-5px)' }, { transform: 'translateX(5px)' }, { transform: 'translateX(0)' } ], { duration: 300 });
                const parent = this.closest('.form-group');
                if (parent) {
                    let msgEl = parent.querySelector('.validation-message');
                    if (!msgEl) {
                        msgEl = document.createElement('div');
                        msgEl.className = 'validation-message';
                        msgEl.style.color = 'var(--app-error)';
                        msgEl.style.fontSize = '0.75rem';
                        msgEl.style.marginTop = '0.25rem';
                        msgEl.style.animation = 'fadeIn 0.3s ease';
                        parent.appendChild(msgEl);
                    }
                    if (this.validity.valueMissing) msgEl.textContent = 'Campo obbligatorio';
                    else if (this.validity.typeMismatch) msgEl.textContent = 'Formato non valido';
                    else msgEl.textContent = 'Valore non valido';
                }
            });
            input.addEventListener('input', function() {
                this.classList.remove('invalid');
                const parent = this.closest('.form-group');
                if (parent) {
                    const msg = parent.querySelector('.validation-message');
                    if (msg) msg.remove();
                }
            });
        });
        
        const konamiCode = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'b', 'a'];
        let konamiIndex = 0;
        document.addEventListener('keydown', function(e) {
            if (e.key === konamiCode[konamiIndex]) {
                konamiIndex++;
                if (konamiIndex === konamiCode.length) {
                    document.body.style.transition = 'transform 5s cubic-bezier(0.68, -0.55, 0.27, 1.55)';
                    document.body.style.transform = 'rotate(360deg) scale(0.9)';
                    showToast('Easter Egg Sbloccato! 👾 Modalità Discoteca Attivata!', 'special');
                    setTimeout(() => {
                        document.body.style.transition = 'transform 1s ease';
                        document.body.style.transform = '';
                    }, 5000);
                    konamiIndex = 0;
                }
            } else {
                konamiIndex = 0;
            }
        });
        
        const currentTimeEl = document.createElement('div');
        currentTimeEl.style.position = 'fixed';
        currentTimeEl.style.bottom = '1rem';
        currentTimeEl.style.left = '1rem';
        currentTimeEl.style.fontSize = '0.75rem';
        currentTimeEl.style.color = 'var(--app-text-secondary)';
        currentTimeEl.style.opacity = '0.7';
        const updateTime = () => {
             currentTimeEl.textContent = '⏱️ ' + new Date().toLocaleString('it-IT', { hour: '2-digit', minute: '2-digit', second: '2-digit'});
        };
        updateTime();
        setInterval(updateTime, 1000);
        document.body.appendChild(currentTimeEl);

        // Helper for HBS 'isJobTypeSelected' - this is a client-side interpretation
        // Server should ideally handle this for initial render if possible
        // For dynamic updates, this can be used if preferences object is available globally
        function updateSelectedJobTypes(preferences) {
            const jobTypeSelect = document.getElementById('jobType');
            if (jobTypeSelect && preferences && preferences.job_type && Array.isArray(preferences.job_type)) {
                Array.from(jobTypeSelect.options).forEach(option => {
                    option.selected = preferences.job_type.includes(option.value);
                });
            }
        }
    </script>
